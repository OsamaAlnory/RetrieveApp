<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RetrieveApp.Design.CardAdmin" VerticalOptions="CenterAndExpand">

    <Button Style="{StaticResource Btn}" Text="Edit" BackgroundColor="#ffe900"
            FontFamily="{StaticResource MFont}" x:Name="edit"/>
    <Button Style="{StaticResource Btn}" Text="Remove" BackgroundColor="Crimson"
            FontFamily="{StaticResource MFont}" x:Name="remove"
            Clicked="RemoveProduct"/>
    
</StackLayout>