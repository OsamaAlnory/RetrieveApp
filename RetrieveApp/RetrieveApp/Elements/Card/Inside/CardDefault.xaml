<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RetrieveApp.Design.CardDefault"
             HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
    <Label x:Name="lbl" HorizontalTextAlignment="Center"
           TextColor="Black" FontFamily="{StaticResource MFont}"/>
    <Button x:Name="btn" BackgroundColor="{StaticResource P}"
           HorizontalOptions="FillAndExpand" TextColor="White"
           CornerRadius="15" Text="VISA" FontAttributes="Bold"
           FontFamily="{StaticResource MFont}"/>
</StackLayout>