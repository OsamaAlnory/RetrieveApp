<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RetrieveApp.Pages.MapPage" BarBackgroundColor="DarkOrchid"
            NavigationPage.HasNavigationBar="False">
    <ContentPage Title="Karta" Icon="places.png">
        <AbsoluteLayout>
            <StackLayout AbsoluteLayout.LayoutFlags="All"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     x:Name="st" Spacing="0">
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage>
    <ContentPage Title="Flöde" Icon="posts.png">
        <StackLayout Padding="15">
            <SearchBar x:Name="search" Placeholder="#Sök här"/>
            <ScrollView>
                <StackLayout x:Name="fl" Spacing="10"/>
            </ScrollView>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Mina beställningar" Icon="reservations.png">
    </ContentPage>
    <ContentPage Title="Lägg till" Icon="add.png" x:Name="pg_admin">
        <StackLayout>
            <Entry x:Name="prd_name" Placeholder="Produktnamn"/>
            <Button Text="Ta en bild" x:Name="btn_img"/>
            <Button Text="Lägg till"/>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Inställningar" Icon="settings.png">
        
    </ContentPage>
</TabbedPage>